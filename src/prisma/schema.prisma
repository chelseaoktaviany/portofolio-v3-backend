generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user model
model Users {
  id String @id @default(uuid())
  firstName String
  lastName String
  username String
  emailAddress String @unique
  password String
  createdAt DateTime
}

// skill model
model Skills {
  id String @id @default(uuid())
  skillTitle String
  createdAt DateTime @default(now())
}

// project model
model Projects {
  id String @id @default(uuid())
  title String
  projectDescription String
  projectLink String
  demoLink String
  techStack String[]
  projectImage String
  startDate DateTime
  endDate DateTime?
  createdAt DateTime @default(now())
}

// certification model
model Certifications {
  id String @id @default(uuid())
  name String
  issuer String
  certificationLink String
  dateIssued DateTime
  createdAt DateTime @default(now())
}