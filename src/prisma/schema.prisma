generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  username     String
  emailAddress String   @unique
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  sessions    Session[]
}

model Session {
  id String @id @default(uuid())
  userId String
  users Users @relation(fields: [userId], references: [id])
  expiredAt DateTime
  createdAt DateTime @default(now())
}

model Skills {
  id         String   @id @default(uuid())
  skillTitle String
  createdAt  DateTime @default(now())
}

model Projects {
  id                 String    @id @default(uuid())
  title              String
  projectDescription String
  projectLink        String
  demoLink           String
  techStack          String[]
  projectImage       String
  startDate          DateTime
  endDate            DateTime?
  createdAt          DateTime  @default(now())
}

model Certifications {
  id                String   @id @default(uuid())
  name              String
  issuer            String
  certificationLink String
  dateIssued        DateTime
  createdAt         DateTime @default(now())
}
